<%= form_for @post do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
    <br>
    <br>
    <h5>Categories</h5>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <br>
    <br>
    <h5>Create a new category:</h5>
    <%= f.fields_for :categories, post.categories.build do |c| %>
        <%= c.text_field :name %>
    <% end %>
    <br>
    <br>
    <%= f.submit %>
<% end %>